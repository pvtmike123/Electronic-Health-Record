  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-users fa-fw"></i>
            Patient List</h3>
        </div>
        <div class="panel-body">
          <div id="morris-area-chart">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th>Forename</th>
                  <th>Surname</th>
                  <th>DOB</th>
                  <th>Postcode</th>
                  <th>Town</th>
                  <th>Number</th>
                  <th>View</th>
                </tr>
              </thead>
              <tbody>
                <% @patients.order('updated_at DESC').limit(9).each do |patient| %>
                  <tr>
                    <td><%= patient.forename %></td>
                    <td><%= patient.surname %></td>
                    <td><%= patient.age %></td>
                    <td><%= patient.postcode %></td>
                    <td><%= patient.town %></td>
                    <td><%= patient.number %></td>
                    <td><%= link_to 'View', patient, class: "btn btn-default" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->

</div>
<!-- /#page-wrapper -->

</div>
