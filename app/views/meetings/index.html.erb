<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Appiontments
          <small>Home</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i>
            Home
          </li>
        </ol>
      </div>
    </div>
    <!-- /.row -->

    <p id="notice"><%= notice %></p>

    <div class="row">
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-calendar fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge"></div>
                <div></div>
              </div>
            </div>
          </div>
          <a href="meetings/new">
            <div class="panel-footer">
              <span class="pull-left">New Appiontment</span>
              <span class="pull-right">
                <i class="fa fa-arrow-circle-right"></i>
              </span>
              <div class="clearfix"></div>
            </div>
          </a>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-search fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right"></div>
            </div>
          </div>
          <a href="/searches/new">
            <div class="panel-footer">
              <span class="pull-left">Advanced Seach</span>
              <span class="pull-right">
                <i class="fa fa-arrow-circle-right"></i>
              </span>
              <div class="clearfix"></div>
            </div>
          </a>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-pencil-square fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right"></div>
            </div>
          </div>
          <a href="/searches/new">
            <div class="panel-footer">
              <span class="pull-left">Edit Patient</span>
              <span class="pull-right">
                <i class="fa fa-arrow-circle-right"></i>
              </span>
              <div class="clearfix"></div>
            </div>
          </a>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-trash fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right"></div>
            </div>
          </div>
          <a href="/searches/new">
            <div class="panel-footer">
              <span class="pull-left">Delete Patient</span>
              <span class="pull-right">
                <i class="fa fa-arrow-circle-right"></i>
              </span>
              <div class="clearfix"></div>
            </div>
          </a>
        </div>
      </div>
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-users fa-fw"></i>
              Patient List</h3>
          </div>
          <div class="panel-body">
            <div id="morris-area-chart">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>Age</th>
                    <th>Postcode</th>
                    <th>Town</th>
                    <th>Number</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  <% @meetings.each do |meeting| %>
                    <tr>
                      <td><%= meeting.name %></td>
                      <td><%= meeting.start_time %></td>
                      <td><%= meeting.end_time %></td>
                      <td><%= link_to 'Show', meeting %></td>
                      <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
                      <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-calendar fa-fw"></i>
              Weekly Appiontments</h3>
          </div>
          <div class="panel-body" id="Weekly-appiontments">
            <div id="morris-area-chart">
              <%= calendar number_of_days: 7, events: @meetings do |date, meetings| %>
                <%= date.day %>

                <% meetings.each do |meeting| %>
                  <div class="meetings">
                    <a><%= link_to meeting.name, meeting %></a><br />
                    <%= meeting.start_time %>
                  </div>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>

</div
