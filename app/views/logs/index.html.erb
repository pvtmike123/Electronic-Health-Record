<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Application
          <small>Logs</small>
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="/">Home</a>
          </li>
            <li class="active">Logs</li>
        </ol>
      </div>
    </div>
    <!-- /.row -->

    <div class="row">

      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-users fa-fw"></i>
              Patient Records</h3>
          </div>
          <div class="panel-body">
            <div id="morris-area-chart">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>Created</th>
                    <th>Last Updated</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  <% @patients.order('updated_at DESC').limit(12).each do |patient| %>
                    <tr>
                      <td><%= patient.id %></td>
                      <td><%= patient.forename %></td>
                      <td><%= patient.surname %></td>
                      <td><%= patient.created_at.to_date %></td>
                      <td><%= patient.updated_at.to_date %></td>
                      <td><%= link_to 'View', patient, class: "btn btn-default" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="panel panel-green">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-search fa-fw"></i>
              Search Records</h3>
          </div>
          <div class="panel-body">
            <div id="morris-area-chart">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Created</th>
                    <th>Last Updated</th>
                    <th>View</th>
                  </tr>
                </thead>
                <tbody>
                  <% @searches.order('created_at DESC').limit(12).each do |search| %>
                    <tr>
                      <td><%= search.id %></td>
                      <td><%= search.created_at.to_date %></td>
                      <td><%= search.updated_at.to_date %></td>
                      <td><%= link_to 'View', search, class: "btn btn-default" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->

  </div>

</div>
