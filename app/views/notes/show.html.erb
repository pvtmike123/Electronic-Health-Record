<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          <%= @patient.forename %>
          <%= @patient.surname %>
          <small>Patient No.
            <%= @patient.id %>
          </small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i>
            Home
          </li>
        </ol>
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= flash[:notice] %></div>
        <% end %>
      </div>
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-3">
      <%= link_to 'Personal Information', patient_path(), class: "list-group-item text-center" %>
      </div>
      <div class="col-lg-3">
        <%= link_to 'Medical Records', medical_path(), class: "list-group-item text-center" %>
      </div>
      <div class="col-lg-3">
        <%= link_to 'Appiontment History', history_path(), class: "list-group-item  text-center" %>
      </div>
      <div class="col-lg-3">
          <%= link_to 'Notes', note_path(), class: "list-group-item active text-center" %>
      </div>
    </div>
    <!-- /.row -->


    <br />

    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-user fa-fw"></i>
              <%= @patient.forename %>
              <%= @patient.surname %></h3>
          </div>
          <div class="panel-body">

          <%= render 'form', note: @note %>

          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-user fa-fw"></i>
              Note History</h3>
          </div>
          <div class="panel-body">

            <%= form_with(model: @note, local: true) do |form| %>

            <div class="field">
              <%= form.label :created_at %>
              <%= form.text_field :created_at, :id => "disabledTextInput", :class => "form-control" %>
            </div>

            <div class="field">
              <%= form.label :updated_at %>
              <%= form.text_field :updated_at, :class => "form-control" %>
            </div>

            <% end %>

          </div>
        </div>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
