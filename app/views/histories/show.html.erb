<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          <%= @patient.forename %>
          <%= @patient.surname %>
          <small>Patient No.
            <%= @patient.id %>
          </small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i>
            Home
          </li>
        </ol>
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= flash[:notice] %></div>
        <% end %>
      </div>
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-3">
        <%= link_to 'Medical Records', patient_path(), class: "list-group-item text-center" %>
      </a>
    </div>
    <div class="col-lg-3">
      <%= link_to 'Medical Records', medical_path(), class: "list-group-item text-center" %>
    </div>
    <div class="col-lg-3">
      <%= link_to 'Appointment History', history_path(), class: "list-group-item active text-center" %>
    </div>
    <div class="col-lg-3">
      <%= link_to 'Notes', note_path(), class: "list-group-item text-center" %>
    </div>
  </div>
  <!-- /.row -->

  <br/>

  <div class="row">
    <div class="col-lg-12">
      <% @events.order('created_at DESC').limit(9).each do |event| %>
        <div class="list-group">
          <a href="/events/<%= event.id %>" class="list-group-item">
            <h4 class="list-group-item-heading"><%= event.title %></h4>
            <p class="list-group-item-text"><%= event.description %></p>
            <p class="list-group-item-text"><%= event.end_time.to_date %></p>
          </a>
        </div>
      <% end %>
    </a>
  </div>
</div>
<!-- /.row -->

</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
