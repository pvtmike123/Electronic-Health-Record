      </div>

    </div>
    <div class="col-md-12">

      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body, id: :note_body, :class => "form-control", :rows => "7" %>
      </div>

      <br>

      <div class="actions">
        <%= form.submit :class => "btn btn-success pull-right" %>
      </div>
    </div>

    </div>
<% end %>
