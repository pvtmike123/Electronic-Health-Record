<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          User Login
          <small></small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i>
            Login
          </li>
        </ol>
      </div>
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <i class="fa fa-info-circle"></i>
          <strong>Warning!</strong>
          You must be signed into view this application.
        </div>
      </div>
    </div>
    <!-- /.row -->

    <div class="container">
      <div class="row">
          <div class="col-md-4 col-md-offset-3">
              <div class="login-panel panel panel-default" id="login-box">
                  <div class="panel-heading">
                      <h3 class="panel-title">Please Sign In</h3>
                  </div>
                  <div class="panel-body">
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          <fieldset>
                              <div class="form-group">
                                <p>
                                  Username
                                </p>
                                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Username" %>
                              </div>
                              <div class="form-group">
                                <p>
                                  Password
                                </p>
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Password" %>
                              </div>
                              <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                              <!-- Change this to a button or input when using this as a form -->
                              <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                          </fieldset>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
    </div>

  </div>
  <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->
